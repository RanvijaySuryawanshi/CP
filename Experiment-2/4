#include <stdio.h>
#include <math.h>

int main() {
    int n, i;
    double sum = 0;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    if (n == 0 || n == 1) {
        printf("Number of digits = 1\n");
        return 0;
    }

    for (i = 1; i <= n; i++)
        sum += log10(i);

    printf("Number of digits in %d! = %d\n", n, (int)sum + 1);
    return 0;
}
